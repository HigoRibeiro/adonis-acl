{
  "name": "@rocketseat/adonis-acl",
  "version": "1.1.2",
  "description": "Adonis ACL system",
  "main": "src/Acl/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "pretest": "npm run test:cleanup && npm run lint",
    "posttest": "npm run test:cleanup && npm run coverage",
    "test:cleanup": "rm -rf test/database && rm -rf test/tmp",
    "test:local": "NO_ANSI=false FORCE_COLOR=true DB=sqlite3 nyc node ./bin/index.js --local",
    "test:win": "set NO_ANSI=false && set FORCE_COLOR=true && set DB=sqlite3 && nyc node ./bin/index.js --win",
    "test": "npm run test:local",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged",
      "pre-push": "npm run test && lint-staged"
    }
  },
  "author": "Evgeny Razumov (enniel)",
  "license": "MIT",
  "dependencies": {
    "acler": "^1.0.0",
    "lodash": "^4.17.4",
    "node-exceptions": "^2.0.2",
    "sqlite3": "^4.0.8"
  },
  "devDependencies": {
    "@adonisjs/ace": "^4.0.7",
    "@adonisjs/fold": "^4.0.5",
    "@adonisjs/lucid": "^4.0.21",
    "@adonisjs/sink": "^1.0.13",
    "child_process": "^1.0.2",
    "coveralls": "^3.0.0",
    "dotenv": "^4.0.0",
    "edge.js": "^1.1.3",
    "husky": "2.2.0",
    "japa": "^1.0.5",
    "japa-cli": "^1.0.1",
    "lint-staged": "^4.0.0",
    "mysql": "^2.13.0",
    "nyc": "^11.3.0",
    "pg": "^6.3.1",
    "semver": "^5.3.0",
    "standard": "^10.0.2",
    "walk-sync": "^0.3.2"
  },
  "nyc": {
    "include": [
      "src",
      "providers",
      "commands"
    ]
  },
  "standard": {
    "globals": [
      "use",
      "make"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rocketseat/adonis-acl.git"
  },
  "keywords": [
    "acl",
    "adonis"
  ],
  "bugs": {
    "url": "https://github.com/Rocketseat/adonis-acl/issues"
  },
  "homepage": "https://github.com/Rocketseat/adonis-acl#readme"
}
